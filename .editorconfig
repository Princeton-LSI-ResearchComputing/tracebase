
# EditorConfig is awesome: http://EditorConfig.org
# top-most EditorConfig file
root = true

# Unix-style newlines at the bottom of every file
[*]
end_of_line = lf
charset = utf-8

# Make sure every file has a blank line at the end
insert_final_newline = true

# Remove any whitespace characters preceding newline characters
trim_trailing_whitespace = true

[*.tsv]
# TSV files may have empty columns
trim_trailing_whitespace = false

[*.css]
indent_style = space
indent_size = 2

[download_{header,row}.tsv]
# These templates need no final newline to avoid empty lines in the output
insert_final_newline = false
